			<script>
				var form = document.getElementById('myForm');
				var validationMessages = document.getElementById('validationMessages');
			
				form.addEventListener('submit', function (event) {
					validationMessages.innerHTML = ''; // Clear previous validation messages
			
					var nameField = form.elements['name'];
					var emailField = form.elements['email'];
					var phoneField = form.elements['phone'];
					var passwordField = form.elements['password'];
					var confirmPasswordField = form.elements['confirmpassword'];
			
					if (nameField.value.trim() === '') {
						//displayValidationMessage('Please enter a username.');
						alert("userName")
						event.preventDefault();
					}
			
					if (emailField.value.trim() === '') {
						displayValidationMessage('Please enter an email address.');
						event.preventDefault();
					}
			
					if (!validatePhoneNumber(phoneField.value)) {
						displayValidationMessage('Please enter a valid phone number.');
						event.preventDefault();
					}
			
					if (passwordField.value.length < 8) {
						displayValidationMessage('Password must be at least 8 characters long.');
						event.preventDefault();
					}
			
					if (passwordField.value !== confirmPasswordField.value) {
						displayValidationMessage('Passwords do not match.');
						event.preventDefault();
					}
				});
			
				function displayValidationMessage(message) {
					var messageElement = document.createElement('p');
					messageElement.textContent = message;
					messageElement.classList.add('text-danger');
					validationMessages.appendChild(messageElement);
				}
			
				function validatePhoneNumber(phone) {
    // Define a regular expression pattern for a 10-digit phone number that starts with "98"
    var phonePattern = /^98\d{8}$/;

    // Test if the phone number matches the pattern
    return phonePattern.test(phone);
}

			</script>
			<script>
				function previewImage() {
					const fileInput = document.getElementById('profileImage');
					const imagePreview = document.getElementById('image-preview');
					const file = fileInput.files[0];
			
					if (file) {
						const reader = new FileReader();
			
						reader.onload = function (e) {
							imagePreview.src = e.target.result;
							imagePreview.style.display = 'block';
						};
			
						reader.readAsDataURL(file);
					} else {
						imagePreview.src = '';
						imagePreview.style.display = 'none';
					}
				}
			</script>
