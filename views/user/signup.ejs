			<script>
				function validateForm() {
					var nameField = document.getElementById('name').value.trim();
					var emailField = document.getElementById('email-error').value.trim();
					var phoneField = document.getElementById('phone-error').value.trim();
					var passwordField = document.getElementById('password-error').value;
					var confirmPasswordField = document.getElementById('confirm-password').value;
					var profileImageField = document.getElementById('profileImage');
			
					// Clear previous validation messages
					var validationMessages = document.getElementById('validationMessages');
					validationMessages.innerHTML = '';
			
					if (nameField === '') {
						displayValidationMessage('Please enter a name.');
						return false;
					}
			
					if (emailField === '') {
						displayValidationMessage('Please enter an email address.');
						return false;
					} else if (!validateEmail(emailField)) {
						displayValidationMessage('Please enter a valid email address.');
						return false;
					}
			
					if (phoneField === '' || !validatePhoneNumber(phoneField)) {
						displayValidationMessage('Please enter a valid phone number.');
						return false;
					}
			
					if (passwordField.length < 8) {
						displayValidationMessage('Password must be at least 8 characters long.');
						return false;
					}
			
					if (passwordField !== confirmPasswordField) {
						displayValidationMessage('Passwords do not match.');
						return false;
					}
			
					// Additional validation for the profile image if needed
			
					// If all validations pass, the form is considered valid
					return true;
				}
			
				function displayValidationMessage(message) {
					var messageElement = document.createElement('p');
					messageElement.textContent = message;
					messageElement.classList.add('text-danger');
					validationMessages.appendChild(messageElement);
				}
			
				function validateEmail(email) {
					var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
					return emailPattern.test(email);
				}
			
				function validatePhoneNumber(phone) {
					var phonePattern = /^(\+?\d{1,4}[\s-]?)?\(?(\d{1,4})\)?[\s-]?\d{1,9}$/;
					return phonePattern.test(phone);
				}
			
